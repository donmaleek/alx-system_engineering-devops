#!/bin/env bash

# Generate the RSA private key with 4096 bits and protect it with passphrase "betty"
openssl genrsa -aes256 -passout pass:betty -out school 4096

# Generate the public key from the private key
openssl rsa -pubout -in school -out school.pub

# Provide information about the generated key pair
echo "RSA key pair generated successfully with 4096 bits and protected with passphrase 'betty'!"
echo "Private key saved as: school"
echo "Public key saved as: school.pub"

